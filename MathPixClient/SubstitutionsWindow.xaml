<Window x:Class="MathPixClient.SubstitutionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathPixClient"
        mc:Ignorable="d"
        Title="Substitutions" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ComboBox x:Name="SubsGroup" Grid.Column="0" Grid.Row="0" />
        <Button x:Name="Add" Content="Add" Grid.Column="1" Grid.Row="0" />
        <Button x:Name="Delete" Content="Delete" Grid.Column="2" Grid.Row="0" />
        <DataGrid x:Name="Substitutions" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" />
    </Grid>
</Window>
